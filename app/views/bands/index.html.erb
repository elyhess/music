<% @bands.order_by_most_recent.each do |band| %>
<% if current_page?("/bands/#{params[:sort]}") %>
  <br><h3><%= link_to "#{band.name}", bands_show_path(band.id) %><h3>
<% else %>
  <h3><br><%= link_to "#{band.name}", bands_show_path(band.id)  %> - Members: <%= band.members.member_count  %></h3>
<% end %>
  <p>Booked: <%= band.booked %></p>
  <p>Date added: <%= band.date_added %></p>
  <%= link_to 'Update Band', bands_edit_path(band.id) %><br>
  <%= link_to 'Delete Band', bands_show_path(band.id), method: :delete %><br>
  <br>
<% end %>

<%= link_to "New Band", bands_new_path %><br>
<%= link_to "Sort by band size", bands_path(sort: true) %> <br>

